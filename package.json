{
	"name": "NODE-SERVER-FOR-TESTING",
	"version": "0.0.1",
	"description": "This is a minimalist Node.js server designed for testing samples of code, libraries, frameworks, ...",
	"author": "Grand Sage InExtremis <grand.sage.inextremis@gmail.com>",
	"license": "Unlicense",
	"type": "module",
	"main": "./dist/server/index.js",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"build-dev-server-ts": "cross-env NODE_ENV=development WEB_ENV=server LANGUAGE=ts webpack",
		"build-dev-client-ts": "cross-env NODE_ENV=development WEB_ENV=client LANGUAGE=ts webpack",
		"build-dev-ts": "npm run build-dev-server-ts && npm run build-dev-client-ts",
		"build-dev-server-js": "cross-env NODE_ENV=development WEB_ENV=server LANGUAGE=js webpack",
		"build-dev-client-js": "cross-env NODE_ENV=development WEB_ENV=client LANGUAGE=js webpack",
		"build-dev-js": "npm run build-dev-server-js && npm run build-dev-client-js",
		"build-prod-server-ts": "cross-env NODE_ENV=production WEB_ENV=server LANGUAGE=ts webpack",
		"build-prod-client-ts": "cross-env NODE_ENV=production WEB_ENV=client LANGUAGE=ts webpack",
		"build-prod-ts": "npm run build-prod-server-ts && npm run build-prod-client-ts",
		"build-prod-server-js": "cross-env NODE_ENV=production WEB_ENV=server LANGUAGE=js webpack",
		"build-prod-client-js": "cross-env NODE_ENV=production WEB_ENV=client LANGUAGE=js webpack",
		"build-prod-js": "npm run build-prod-server-js && npm run build-prod-client-js"
	},
	"homepage": "https://github.com/grand-sage-inextremis/NODE-SERVER-FOR-TESTING#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/grand-sage-inextremis/NODE-SERVER-FOR-TESTING.git"
	},
	"bugs": {
		"url": "https://github.com/grand-sage-inextremis/NODE-SERVER-FOR-TESTING/issues"
	},
	"devDependencies": {
		"@types/node": "^24.3.1",
		"cross-env": "^10.1.0",
		"dotenv": "^17.2.3",
		"ts-loader": "^9.5.4",
		"typescript": "^5.9.2",
		"webpack": "^5.102.0",
		"webpack-cli": "^6.0.1"
	},
	"dependencies": {
		"mime": "^4.0.7"
	}
}
